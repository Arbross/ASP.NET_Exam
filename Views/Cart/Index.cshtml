@model Exam_ASP_NET.Models.ViewModels.CartVM;

<div class="container">
    @foreach (Purchase purchase in @Model.Purchases)
    {
    <div class="p-2 bg-light mb-1 d-flex rounded">
        <div>
            <img src="@WebConstants.ImagesPath@purchase.Image" alt="Alternate Text" style="width: 400px;" />
        </div>
        <div class="p-3">
            <p>Name : @purchase.Name</p>
            <p>Link : @purchase.Link</p>
            <p>Purchase : @purchase.Category.Name</p>
            <div class="input-group">
                <input type="number" class="form-control" value="1" min="1"/>
                <input type="submit" class="btn btn-primary" value="Buy">
            </div>
        </div>
    </div>
    }
</div>
