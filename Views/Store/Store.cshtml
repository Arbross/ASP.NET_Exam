@model IEnumerable<Exam_ASP_NET.Models.Purchase>

<div class="container d-flex justify-content-between">
    <div>
        <h2>Admin Panel</h2>
    </div>
    <div>
        <a asp-controller="Store" asp-action="Upset" class="btn btn-primary">Create Genre</a>
    </div>
</div>

<div class="container d-inline-flex flex-row">
    <div class="bg-white box-shadow p-3">
        <ul class="list-group">
            <li class="list-group-item">Name</li>
            <li class="list-group-item">Size</li>
            <li class="list-group-item">Color</li>
            <li class="list-group-item">Price</li>
            <li class="list-group-item">Price</li>
        </ul>
    </div>
    <div class="bg-white box-shadow p-3 ml-4 w-100">
        @if (Model.Any())
        {
            @foreach (Purchase item in Model)
            {
                <div class="p-2 bg-light mb-1">
                    <p>Name : @item.Name</p>
                    <p>Image : @item.Image</p>
                    <p>Link : @item.Link</p>
                    <div class="d-flex justify-content-between p-1">
                        <a asp-controller="Store" asp-route-Id="@item.Id" asp-action="Upset" class="btn btn-secondary"><i class="fas fa-edit"></i> Edit</a>
                        <a asp-controller="Store" asp-route-Id="@item.Id" asp-action="Delete" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Delete</a>
                    </div>
                </div>
            }
        }
        else { 
            <p>There is no purchases.</p>
        }
    </div>
</div>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial.cshtml" />
    }
}
